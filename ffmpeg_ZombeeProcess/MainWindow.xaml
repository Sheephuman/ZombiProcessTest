<Window x:Class="ffmpeg_ZombeeProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ffmpeg_ZombeeProcess"
        mc:Ignorable="d"
        Title="ffmpeg_ZombeeProcess" Height="350" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
        <Button x:Name="testButton"     Content="Test" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="testButton_Click"/>
            <Button  x:Name="StopButton" Content="Stop" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="StopButton_Click"/>
            </StackPanel>
            <TextBox x:Name="OutputTextBox" IsReadOnly="True" Margin="10" Height="300" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
